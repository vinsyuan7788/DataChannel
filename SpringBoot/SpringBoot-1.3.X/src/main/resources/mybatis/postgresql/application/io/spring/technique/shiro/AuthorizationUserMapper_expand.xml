		<result column="role_name" property="roleName" jdbcType="VARCHAR"/>
    	<result column="role_code" property="roleCode" jdbcType="VARCHAR"/>
    	<result column="role_group" property="roleGroup" jdbcType="VARCHAR"/>
	</resultMap>
	
	<resultMap id="AuthorizationUserResourceVo" type="application.io.spring.technique.shiro.api.vo.AuthorizationUserResourceVo" extends="BaseResultMap">
